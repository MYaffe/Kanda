<h3>Post a Solution</h3>
<%= form_for [ @problem, @solution ] do |f| %>

  <p>
    <%= f.label :author %><br/>
    <%= f.text_field :author %>
  </p>

  <p>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </p>

   <p>
  <%= f.label :category %><br/>
    <%= f.select(:category, options_for_select([['Song', 'song'],['Talk', 'talk']])) %>
  </p>

  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>