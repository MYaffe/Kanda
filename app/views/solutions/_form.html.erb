<h3>Post a Solution</h3>
<%= form_for [ @problem, @solution ] do |f| %>


  <h4>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </h4>

  <p>
    <%= f.label :author %><br/>
    <%= f.text_field :author %>
  </p>


   <p>
  <%= f.label :category %><br/>
    <%= f.select(:category, options_for_select([['Song', 'song'],['Talk', 'talk'],['Do', 'do']])) %>
  </p>

  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>